<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/top"
            android:background="@color/hometop"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="49dp">
        <ImageView
                android:src="@drawable/path"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:padding="14dp"
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_title"
                android:layout_centerInParent="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Share"
                android:textColor="@color/tabbarselectedColor"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/feedback_sendbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Send"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:textColor="#E4E4E4" />

    </RelativeLayout>
    <include layout="@layout/include_line"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Subject:"
        android:id="@+id/textView16"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/feedback_edittext"
        android:layout_marginLeft="30dp"
        android:background="@null"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp" />

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="3dp"
          android:background="@color/linecolor"
    />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send with all product details"
        android:id="@+id/feedback_checkBox"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:checked="true" />
</LinearLayout>