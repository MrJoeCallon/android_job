<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingTop="10dip" android:paddingBottom="10dip"
        android:orientation="vertical">


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:layout_centerInParent="true" android:id="@+id/layout"
        android:visibility="gone">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tip" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/lastupdate_time"/>

</LinearLayout>

        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/arrow" android:src="@drawable/device"
            android:layout_toLeftOf="@id/layout"
            android:layout_gravity="center" />

        <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/progress"
            android:layout_toLeftOf="@id/layout" android:visibility="gone" style="?android:attr/progressBarStyleSmall"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>