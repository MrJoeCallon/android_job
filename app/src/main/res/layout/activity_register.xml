<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context=".RegisterActivity">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Sign Up" android:textColor="@color/C2" android:textSize="22dp"
              android:padding="16dp" android:gravity="center_horizontal"/>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/group10926"
    />

    <EditText
            android:id="@+id/editText_register_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="@string/login_input_user_name"
    />
    <include layout="@layout/include_line"/>

    <EditText
            android:id="@+id/editText_register_userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/login_input_user_password"
            android:inputType="textPassword">
    </EditText>
    <include layout="@layout/include_line"/>
    <EditText
            android:id="@+id/editText_register_userPassword_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/register_input_user_password_again"
            android:inputType="textPassword">
    </EditText>
    <include layout="@layout/include_line"/>
    <Button
            android:id="@+id/button_i_need_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_register_userPassword_again"
            android:textColor="@color/whiteColor"
            android:background="@color/ggColor"
            android:text="@string/login_button_register"
            android:layout_marginTop="90dp"/>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="14dp"
            android:id="@+id/imageView21"
            android:background="@drawable/loginor_seperator"
            android:layout_marginTop="50dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout5"
            android:layout_marginTop="20dp">

        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/xmlid_83_"
                android:id="@+id/register_facebook"
                android:layout_marginLeft="70dp"/>

        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/register_twitter"
                android:layout_marginLeft="20dp"
                android:background="@drawable/xmlid_46_"/>

        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/group10578"
                android:id="@+id/register_wechat"
                android:layout_marginLeft="20dp"/>

        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/xmlid_30_"
                android:id="@+id/register_weibo"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/C3" android:textSize="12dp"
              android:paddingTop="16dp" android:lineSpacingExtra="5dp"
              android:text="@string/register_tips" android:gravity="center_horizontal"/>
</LinearLayout>