                    android:id="@+id/referral_times2"
                    android:layout_gravity="right|top"
                    android:textSize="20dp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
